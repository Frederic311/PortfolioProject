@inject ToastService ToastService
@implements IDisposable

@if (_visible)
{
    <div class="@GetToastPositionClass() fixed z-[9999] flex items-center w-full max-w-sm p-4 rounded-lg shadow-xl border animate-slide-in"
   role="alert">
        <!-- Icon -->
        <div class="@GetIconContainerClass() inline-flex items-center justify-center shrink-0 w-8 h-8 rounded">
   @((MarkupString)GetIcon())
        </div>
        
        <!-- Message -->
<div class="ms-3 text-sm font-medium text-white">@_message</div>
 
        <!-- Close Button -->
   <button type="button" 
     @onclick="Hide"
     class="ms-auto flex items-center justify-center text-gray-300 hover:text-white bg-transparent border border-transparent hover:bg-white/10 focus:ring-2 focus:ring-white/20 rounded h-8 w-8 transition-colors"
     aria-label="Close">
 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
   </svg>
    </button>
    </div>
}

<style>
 @@keyframes slide-in {
from {
opacity: 0;
   transform: translateX(100%);
}
        to {
  opacity: 1;
    transform: translateX(0);
      }
    }

    .animate-slide-in {
        animation: slide-in 0.3s ease-out;
    }
</style>

@code {
  private bool _visible = false;
    private string _message = string.Empty;
    private ToastType _type = ToastType.Info;
  private System.Threading.Timer? _timer;

    protected override void OnInitialized()
{
        ToastService.OnShow += Show;
    }

    private void Show(string message, ToastType type)
    {
      _message = message;
      _type = type;
        _visible = true;
        StateHasChanged();

   // Auto-hide after 5 seconds
        _timer?.Dispose();
   _timer = new System.Threading.Timer(_ =>
   {
   Hide();
  }, null, 5000, Timeout.Infinite);
    }

    private void Hide()
    {
   _visible = false;
 InvokeAsync(StateHasChanged);
    }

    private string GetToastPositionClass() => "top-4 right-4";

private string GetIconContainerClass() => _type switch
    {
  ToastType.Success => "text-green-400 bg-green-500/20",
   ToastType.Error => "text-red-400 bg-red-500/20",
  ToastType.Warning => "text-yellow-400 bg-yellow-500/20",
        ToastType.Info => "text-blue-400 bg-blue-500/20",
        _ => "text-gray-400 bg-gray-500/20"
    };

    private string GetIcon() => _type switch
    {
        ToastType.Success => "<svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5 13l4 4L19 7'/></svg>",
ToastType.Error => "<svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12'/></svg>",
  ToastType.Warning => "<svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'/></svg>",
  ToastType.Info => "<svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'/></svg>",
     _ => "<svg class='w-5 h-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'/></svg>"
};

    public void Dispose()
    {
        ToastService.OnShow -= Show;
        _timer?.Dispose();
    }
}
