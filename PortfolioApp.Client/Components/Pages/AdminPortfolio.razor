@page "/admin/portfolio"
@inject IAuthService AuthService
@inject IPortfolioService PortfolioService
@inject ITokenService TokenService
@inject ToastService ToastService
@inject NavigationManager Navigation
@using PortfolioApp.Shared.DTOs

<PageTitle>Manage Profile</PageTitle>

<div class="min-h-screen bg-[#101e22]">
    <nav class="bg-white/5 border-b border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
     <div class="flex items-center justify-between h-16">
       <div class="flex items-center gap-3">
    <a href="/admin/dashboard" class="text-gray-400 hover:text-white">← Dashboard</a>
     <span class="text-gray-600">/</span>
         <h1 class="text-white text-xl font-bold">Profile</h1>
       </div>
 </div>
        </div>
    </nav>

    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
     @if (_isLoading)
   {
    <div class="flex items-center justify-center py-24">
        <svg class="animate-spin h-12 w-12 text-[#0db9f2]" fill="none" viewBox="0 0 24 24">
               <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
        }
     else
        {
     <div class="bg-white/5 rounded-lg p-6 border border-white/10">
          <h2 class="text-white text-2xl font-bold mb-6">Edit Your Profile</h2>
            
         <EditForm Model="@_formModel" OnValidSubmit="HandleSubmit" FormName="portfolioForm" class="space-y-6">
       <DataAnnotationsValidator />

        <div>
    <label class="block text-sm font-medium text-gray-300 mb-2">Name</label>
     <InputText @bind-Value="_formModel.Name" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" />
            <ValidationMessage For="@(() => _formModel.Name)" class="text-red-300 text-sm mt-1" />
          </div>

      <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">Title</label>
 <InputText @bind-Value="_formModel.Title" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" placeholder="e.g. Full-Stack Developer" />
            <ValidationMessage For="@(() => _formModel.Title)" class="text-red-300 text-sm mt-1" />
            </div>

      <div>
     <label class="block text-sm font-medium text-gray-300 mb-2">Role</label>
      <InputText @bind-Value="_formModel.Role" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" placeholder="e.g. Senior Developer" />
    <ValidationMessage For="@(() => _formModel.Role)" class="text-red-300 text-sm mt-1" />
         </div>

        <div>
        <label class="block text-sm font-medium text-gray-300 mb-2">Bio</label>
<InputTextArea @bind-Value="_formModel.Bio" rows="5" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" />
     <ValidationMessage For="@(() => _formModel.Bio)" class="text-red-300 text-sm mt-1" />
            </div>

       <div>
     <label class="block text-sm font-medium text-gray-300 mb-2">Profile Image</label>
      <p class="text-xs text-gray-400 mb-2">Maximum file size: 5 MB. Supported formats: JPG, PNG, GIF, WebP</p>
         
<div class="space-y-3">
             <InputFile OnChange="HandleImageUpload" accept="image/*" 
 class="block w-full text-sm text-gray-300
  file:mr-4 file:py-2 file:px-4
        file:rounded-lg file:border-0
      file:text-sm file:font-semibold
       file:bg-[#0db9f2] file:text-[#101e22]
    hover:file:opacity-90 file:cursor-pointer
     cursor-pointer border border-white/20 rounded-lg p-2 bg-white/10" />
     
   @if (!string.IsNullOrEmpty(_imagePreview))
 {
    <div class="flex items-center gap-3 p-3 bg-white/5 rounded-lg border border-white/10">
     <!-- Small circular preview -->
        <div class="flex-shrink-0">
       <img src="@_imagePreview" 
    alt="Profile Preview" 
          class="w-16 h-16 rounded-full object-cover border-2 border-[#0db9f2] shadow-md" />
      </div>
 
   <!-- Image info and remove button -->
     <div class="flex-1 flex items-center justify-between">
 <div>
     <p class="text-sm text-gray-300 font-medium">Profile Image</p>
      <p class="text-xs text-gray-400">Ready to save</p>
      </div>
        <button type="button" 
 @onclick="ClearImage" 
 class="px-3 py-1.5 rounded-lg bg-red-500/20 text-red-300 text-xs hover:bg-red-500/30 transition-colors flex items-center gap-1.5">
  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
    </svg>
              Remove
   </button>
    </div>
          </div>
   }
     </div>
    </div>

    <div>
     <label class="block text-sm font-medium text-gray-300 mb-2">Contact Email</label>
            <InputText @bind-Value="_formModel.ContactEmail" type="email" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" />
       <ValidationMessage For="@(() => _formModel.ContactEmail)" class="text-red-300 text-sm mt-1" />
     </div>

  <div>
       <label class="block text-sm font-medium text-gray-300 mb-2">LinkedIn URL</label>
         <InputText @bind-Value="_formModel.LinkedIn" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" placeholder="https://linkedin.com/in/..." />
        </div>

    <div>
          <label class="block text-sm font-medium text-gray-300 mb-2">GitHub URL</label>
     <InputText @bind-Value="_formModel.Github" class="w-full px-4 py-2 rounded-lg bg-white/10 text-white border border-white/20 focus:ring-2 focus:ring-[#0db9f2] outline-none" placeholder="https://github.com/..." />
  </div>

      <button type="submit" disabled="@_isSaving" class="w-full px-4 py-3 rounded-lg bg-[#0db9f2] text-[#101e22] font-semibold hover:opacity-90 disabled:opacity-50 transition-opacity">
      @if (_isSaving)
       {
           <span class="flex items-center justify-center gap-2">
  <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
       <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
      <span>Saving...</span>
           </span>
   }
            else
       {
             <span>Save Changes</span>
       }
       </button>
        </EditForm>
            </div>
}
    </div>
</div>

@code {
    private bool _isLoading = true;
    private bool _isSaving = false;
    private PortfolioDto? _portfolio;
    private PortfolioFormModel _formModel = new();
    private string? _imagePreview;
private string? _uploadError;
    private bool _uploadSuccess = false;
    private const long MaxFileSize = 5 * 1024 * 1024; // 5 MB

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/admin");
            return;
        }
        
  await LoadPortfolio();
    }

    private async Task LoadPortfolio()
    {
  _isLoading = true;
  try
        {
            var portfolios = await PortfolioService.GetAllAsync();
 _portfolio = portfolios.FirstOrDefault();
            if (_portfolio != null)
            {
     _formModel = new()
  {
             Name = _portfolio.Name,
   Title = _portfolio.Title ?? "",
   Role = _portfolio.Role ?? "",  // Nouveau champ
     Bio = _portfolio.Bio ?? "",
     ProfileImage = _portfolio.ProfileImage,
           ContactEmail = _portfolio.ContactEmail ?? "",
   LinkedIn = _portfolio.LinkedIn,
     Github = _portfolio.Github
     };
            
   if (!string.IsNullOrEmpty(_portfolio.ProfileImage))
        {
             _imagePreview = _portfolio.ProfileImage;
     }
            }
     }
        catch (Exception ex)
      {
        ToastService.ShowError($"Failed to load: {ex.Message}");
        }
     finally
        {
         _isLoading = false;
     }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        _uploadError = null;
     _uploadSuccess = false;

        var file = e.File;
        if (file == null) return;

        if (file.Size > MaxFileSize)
{
            _uploadError = $"File size ({file.Size / 1024 / 1024:F2} MB) exceeds maximum allowed size of 5 MB";
            ToastService.ShowError(_uploadError);
            return;
        }

        var allowedTypes = new[] { "image/jpeg", "image/jpg", "image/png", "image/gif", "image/webp" };
 if (!allowedTypes.Contains(file.ContentType.ToLower()))
        {
    _uploadError = "Invalid file type. Please upload a JPG, PNG, GIF, or WebP image.";
         ToastService.ShowError(_uploadError);
 return;
   }

  try
        {
     var buffer = new byte[file.Size];
       await file.OpenReadStream(MaxFileSize).ReadAsync(buffer);

         var base64 = Convert.ToBase64String(buffer);
    var dataUrl = $"data:{file.ContentType};base64,{base64}";

            _formModel.ProfileImage = dataUrl;
            _imagePreview = dataUrl;
        _uploadSuccess = true;

            ToastService.ShowSuccess($"✨ Image uploaded successfully! ({file.Size / 1024:F0} KB)");
        }
        catch (Exception ex)
     {
_uploadError = $"Failed to upload image: {ex.Message}";
            ToastService.ShowError($"❌ {_uploadError}");
  }
    }

    private void ClearImage()
  {
        _formModel.ProfileImage = null;
 _imagePreview = null;
        _uploadError = null;
        _uploadSuccess = false;
        ToastService.ShowInfo("🗑️ Image removed");
    }

    private async Task HandleSubmit()
    {
        _isSaving = true;
   try
   {
     var dto = new PortfolioDto
     {
   Name = _formModel.Name,
    Description = _formModel.Bio,
      Title = _formModel.Title,
     Role = _formModel.Role,  // Nouveau champ
        Bio = _formModel.Bio,
     ProfileImage = _formModel.ProfileImage,
   ContactEmail = _formModel.ContactEmail,
    LinkedIn = _formModel.LinkedIn,
         Github = _formModel.Github
   };

      Console.WriteLine("=== SUBMITTING PORTFOLIO ===");
     Console.WriteLine($"Name: {dto.Name}");
        Console.WriteLine($"Title: {dto.Title}");

  if (_portfolio != null)
    {
  Console.WriteLine($"Updating existing portfolio (ID: {_portfolio.Id})");
      await PortfolioService.UpdateAsync(_portfolio.Id, dto);
         ToastService.ShowSuccess("✅ Profile updated successfully!");
     }
    else
     {
   Console.WriteLine("Creating new portfolio");
   await PortfolioService.CreateAsync(dto);
    ToastService.ShowSuccess("🎉 Profile created successfully!");
       }
           
       await LoadPortfolio();
 }
catch (Exception ex)
    {
  Console.WriteLine($"❌ Error in HandleSubmit: {ex.Message}");
   ToastService.ShowError($"❌ Failed to save profile: {ex.Message}");
        }
   finally
        {
       _isSaving = false;
    }
    }

    private class PortfolioFormModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required]
        public string Title { get; set; } = string.Empty;

        public string? Role { get; set; }  // Nouveau champ

        [System.ComponentModel.DataAnnotations.Required]
        public string Bio { get; set; } = string.Empty;

        public string? ProfileImage { get; set; }

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.EmailAddress]
     public string ContactEmail { get; set; } = string.Empty;

     public string? LinkedIn { get; set; }
   public string? Github { get; set; }
    }
}
